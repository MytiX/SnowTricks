<div class="row h-100">
	<div class="col-12 d-flex flex-column justify-content-center align-items-center">
		<h2 class="sign-title">{{ title }}</h2>
		<div id="sign-container">

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_signin') }}" method="POST">

                <div class="form-group mb-3">
                    <label for="username">Votre email :</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                </div>

                <div class="form-group mb-3">
                    <label for="password">Votre mot de passe :</label>
                    <input type="password" class="form-control" id="password" name="_password"/>                
                </div>

                {% if app.request.attributes.get('_route') == 'app_signin' %}
                    <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
                {% endif %}

                {% if app.request.attributes.get('_route') == 'app_signup' %}
                    <a href="{{ path('app_signin') }}">J'ai déjà un compte !</a>
                {% endif %}

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <div class="text-end">
                    <button class="btn btn-primary" type="submit">{{ button_text|default('Soumettre') }}</button>
                </div>

            </form>
		</div>
	</div>
</div>
