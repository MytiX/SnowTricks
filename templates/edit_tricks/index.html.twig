{% extends 'base.html.twig' %}

{% block title %}
    {% if app.request.attributes.get('_route') == 'app_add_tricks' %}
        Ajouter un nouveau tricks
    {% else %}
        Modifier un tricks
    {% endif %}
{% endblock %}

{% block body %}

    <div class="container">
    
        {% if app.request.attributes.get('_route') == 'app_edit_tricks' and tricks != null %}
            <div class="row">
                {% for media in tricks.medias %}            
                    <div class="col-2 image-trick-edit">
                        <img class="img-fluid" src="{{ asset('uploads/' ~ media.name) }}">
                        <div>                     
                            <a href="{{ path('app_header_media', {media_id: media.id})}}" data-media="{{ media.id }}" data-header data-token="{{ csrf_token('header' ~ media.id) }}"><i class="{% if media.header == true %}bi bi-heart-fill{% else %}bi bi-heart{% endif %}"></i></a>
                            <a href="{{ path('app_delete_media', {id: media.id})}}" data-delete data-token="{{ csrf_token('delete' ~ media.id) }}"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-12">

                {{ form_start(form) }}
                    {{ form_row(form.name, { 'label': 'Nom de la figure' }) }}
                    {{ form_row(form.description, { 'label': 'Description' }) }}
                    {{ form_row(form.group_stunt, { 'label': 'Type de tricks' }) }}
                    <div id="container-medias" data-index="{{form.medias|length > 0 ? form.medias|last.vars.name + 1 : 0}}" data-prototype="{{ form_widget(form.medias.vars.prototype)|e('html_attr') }}">
                        <label class="mb-3">MÃ©dias</label>
                        {% for media in form.medias %}
                            {{ form_row(media) }}
                        {% endfor %}
                    </div>
                    <button id="add_item_media" data-collection-holder-class="medias" class="btn btn-primary"><i class="bi bi-plus"></i></button>
                    <div class="text-end">
                        {{ form_row(form.submit, { 'label': 'Envoyer' }) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block script %}
    {% if app.request.attributes.get('_route') == 'app_edit_tricks' %}
        <script src="{{ asset('assets/js/tricks_media.js') }}"></script>
    {% endif %}
    <script src="{{ asset('assets/js/tricks_form.js') }}"></script>
{% endblock %}
