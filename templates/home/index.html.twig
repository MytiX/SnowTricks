{% extends 'base.html.twig' %}

{% block body %}

    <div class="row position-relative">
        {% for message in app.flashes('success') %}
            <div class="col-3 alert-custom alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        <div id="introduction" class="col-12">
            <div class="header-content">
                <h2>Snowtricks le site, o√π tu pourras apprendre les meilleures figures de snowboard !</h2>
            </div>
            <a href="#trick-container" class="arrow-down"><i class="bi bi-arrow-down"></i></a>
        </div>
    </div>
    {% if app.user != null %}
        <div class="row mt-4 ms-4">
            <div class="col-2">
                <a href="{{ path('app_add_tricks') }}" class="btn btn-primary" role="button">Ajouter un tricks</a>
            </div>
        </div>
    {% endif %}
    <div id="trick-container" class="row">
        {% include "components/_card.html.twig" with {tricks: tricks} only %}
    </div>
    <div class="row py-4">
        {% include "components/_loader.html.twig" with {page: page, route:'app_tricks'} %}
    </div>

{% endblock %}

{% block script %}
    <script src="{{ asset('assets/js/home_pagination.js') }}"></script>
{% endblock %}